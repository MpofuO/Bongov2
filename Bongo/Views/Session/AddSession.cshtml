@model AddSessionViewModel

@{
    ViewData["Title"] = "Add Session";
}

<div class="session-prep bg-light shadow w-sm-50">
    <h4 class="mb-5">Add Session</h4>
    <form asp-action="AddSession" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="mb-3">
            <h5 class="">Module Code</h5>
            <input asp-for="ModuleCode" class="form-control w-50" />
        </div>
        <div class="mb-3">
            <h5  class="">Session type</h5>
            <select asp-for="SessionType" class="form-select mb-2 w-50">
                <option>Lecture</option>
                <option>Practical</option>
                <option>Tutorial</option>
            </select>
            <select asp-for="SessionNumber" class="form-select w-50">
                @for (int i = 1; i <= 10; i++)
                {
                    <option>@i</option>
                }
            </select>
        </div>
        <div class="mb-3">
            <h5 class="form-label">Venue</h5>
            <input asp-for="Venue" class="form-control w-50" />
        </div>
        <div class="mb-3">
            <h5 class="">Day</h5>
            <input asp-for="Day" class="form-control w-50 mb-3" readonly />
            <h5 class=" ">Start time</h5>
            <input asp-for="startTime" class="form-control w-50 mb-3" readonly />
            <h5  class="form-label">End time</h5>
            <select asp-for="endTime" class="form-select w-50" asp-items="@ViewBag.endTimes">
            </select>
        </div>
        <div class="d-flex session-prep-buttons">
            <button class="btn btn-primary" type="submit" title="Add Session"><i class=" fa-solid fa-floppy-disk"></i></button>
            <a class="btn btn-outline-primary mx-3" asp-action="Index" asp-controller="Home" title="Go back"><i class=" fa-solid fa-arrow-right"></i></a>
        </div>
    </form>
</div>
